{
  "description": "Larvling lifecycle hooks for conversation tracking and extraction",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "export PYTHONPATH=\"${CLAUDE_PLUGIN_ROOT}/scripts\" && python \"${CLAUDE_PLUGIN_ROOT}/scripts/preflight.py\" && python \"${CLAUDE_PLUGIN_ROOT}/scripts/hooks/session_start.py\"",
            "timeout": 10
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "export PYTHONPATH=\"${CLAUDE_PLUGIN_ROOT}/scripts\" && python \"${CLAUDE_PLUGIN_ROOT}/scripts/hooks/prompt.py\"",
            "timeout": 15
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "export PYTHONPATH=\"${CLAUDE_PLUGIN_ROOT}/scripts\" && _TMP=$(mktemp) && cat >\"$_TMP\" && python \"${CLAUDE_PLUGIN_ROOT}/scripts/hooks/stop.py\" <\"$_TMP\"; python \"${CLAUDE_PLUGIN_ROOT}/scripts/analyze.py\" <\"$_TMP\"; rm -f \"$_TMP\"",
            "timeout": 15
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "export PYTHONPATH=\"${CLAUDE_PLUGIN_ROOT}/scripts\" && python \"${CLAUDE_PLUGIN_ROOT}/scripts/hooks/session_end.py\"",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
